<section class="video-section-wrapper">
  {% if section.settings.heading != blank %}
    <h2 class="video-section-heading">{{ section.settings.heading }}</h2>
  {% endif %}

  <div class="video-grid">
    {% for block in section.blocks %}
      <div class="video-card" {{ block.shopify_attributes }}>
        <div class="video-wrapper">
          <video class="video-element" autoplay loop muted playsinline>
            {% if block.settings.mp_url != blank %}
              <source src="{{ block.settings.mp_url }}" type="video/mp4">
            {% endif %}
            {% if block.settings.webm_url != blank %}
              <source src="{{ block.settings.webm_url }}" type="video/webm">
            {% endif %}
            Your browser does not support the video tag.
          </video>
        </div>

        {% if block.settings.name != blank %}
          <p class="video-caption">{{ block.settings.name }}</p>
        {% endif %}

        {% if block.settings.description != blank %}
          <p class="video-description">{{ block.settings.description }}</p>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</section>

<style>
.video-section-wrapper {
  padding: 40px 20px;
  background: #ffffff;
}

.video-section-heading {
  text-align: center;
  font-size: 34px;
  margin-bottom: 35px;
  color: #000000;
}

.video-grid {
  max-width: 1200px;
  margin: 0 auto;
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 24px;
}

.video-card {
  text-align: center;
}

.video-wrapper {
  position: relative;
  width: 100%;
  padding-top: 125%;
  border-radius: 16px;
  overflow: hidden;
  background: #f1f5f9;
}

.video-element {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.video-caption {
  margin-top: 14px;
  font-size: 16px;
  color: #000000;
}

.video-description {
  margin-top: 6px;
  font-size: 14px;
  color: #475569;
  line-height: 1.5;
}

@media (max-width: 1024px) {
  .video-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (max-width: 640px) {
  .video-grid {
    grid-template-columns: 1fr;
  }
}
</style>

{% schema %}
{
  "name": "Video Grid",
  "tag": "section",
  "class": "video-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading"
    }
  ],
  "blocks": [
    {
      "type": "video",
      "name": "Video",
      "settings": [
        {
          "type": "url",
          "id": "mp_url",
          "label": "MP4 Video URL"
        },
        {
          "type": "url",
          "id": "webm_url",
          "label": "WebM Video URL"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Caption Text"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description Text"
        }
      ]
    }
  ],
  "max_blocks": 8,
  "presets": [
    {
      "name": "Video Grid",
      "category": "Custom",
      "blocks": [
        { "type": "video" },
        { "type": "video" },
        { "type": "video" },
        { "type": "video" }
      ]
    }
  ]
}
{% endschema %}
