<section class="nutrition-highlights">
  <div class="nutrition-highlights__container">
    
    {% if section.settings.top_text != blank %}
      <p class="nutrition-highlights__top-text">
        {{ section.settings.top_text }}
      </p>
    {% endif %}

    {% if section.settings.heading != blank %}
      <h2 class="nutrition-highlights__heading">
        {{ section.settings.heading }}
      </h2>
    {% endif %}

    <div class="nutrition-highlights__grid">
      {% for block in section.blocks %}
        <div class="nutrition-highlights__card" {{ block.shopify_attributes }}>
          
          {% if block.settings.icon != blank %}
            <div class="nutrition-highlights__icon">
              <img src="{{ block.settings.icon | image_url: width: 100 }}" alt="">
            </div>
          {% endif %}

          <div class="nutrition-highlights__content">
            <h3>{{ block.settings.title }}</h3>
            <p>{{ block.settings.text }}</p>
          </div>

        </div>
      {% endfor %}
    </div>

  </div>
</section>

<style>
.nutrition-highlights {
  padding: 40px 20px;
  background: #ffffff;
}

.nutrition-highlights__container {
  max-width: 1200px;
  margin: 0 auto;
  text-align: center;
}

.nutrition-highlights__top-text {
  color:  #3C6E71;
  font-weight: 600;
  margin-bottom: 16px;
  font-size: 18px;
}

.nutrition-highlights__heading {
  font-size: 44px;
  line-height: 1.2;
  font-weight: 700;
  margin-bottom: 60px;
  color: #000000;
}

.nutrition-highlights__grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 24px;
}

.nutrition-highlights__card {
  background: #ffffff;
  border-radius: 16px;
  padding: 28px;
  text-align: left;
  box-shadow: 0 6px 24px rgba(0,0,0,0.05);
  display: flex;
  gap: 16px;
  align-items: flex-start;
}

.nutrition-highlights__icon {
  width: 56px;
  height: 56px;
  background:  #3C6E71;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.nutrition-highlights__icon img {
  width: 28px;
  height: 28px;
}

.nutrition-highlights__content h3 {
  font-size: 18px;
  font-weight: 600;
  margin-bottom: 6px;
  color: #020617;
}

.nutrition-highlights__content p {
  font-size: 16px;
  color:  #3C6E71;
  line-height: 1.5;
}

/* Responsive */
@media (max-width: 1024px) {
  .nutrition-highlights__grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (max-width: 640px) {
  .nutrition-highlights__heading {
    font-size: 32px;
  }

  .nutrition-highlights__grid {
    grid-template-columns: 1fr;
  }
}
</style>

{% schema %}
{
  "name": "Nutrition Highlights",
  "settings": [
    {
      "type": "text",
      "id": "top_text",
      "label": "Top Text",
      "default": "Choose Your Meal Plan"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Quantified Meals, approved by Nutrition experts"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Protein Rich"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Description",
          "default": "Well balanced meals for your body"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Nutrition Highlights",
      "blocks": [
        { "type": "feature" },
        { "type": "feature" },
        { "type": "feature" },
        { "type": "feature" }
      ]
    }
  ]
}
{% endschema %}
